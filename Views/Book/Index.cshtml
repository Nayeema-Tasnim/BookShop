@{
    ViewData["Title"] = "Book List";
}

<h2>Book Store</h2>
<div>
    <form id="settings-form">
        <label for="language">Language/Region:</label>
        <select id="language">
            <option value="en">English (USA)</option>
            <option value="de">German (Germany)</option>
            <option value="fr">French (France)</option>
        </select>

        <label for="seed">Seed:</label>
        <input type="number" id="seed" placeholder="Seed">
        <button type="button" onclick="generateRandomSeed()">Random Seed</button>

        <label for="likes">Average Likes:</label>
        <input type="range" id="likes" min="0" max="10" step="0.1">
        <span id="likesValue">5</span>

        <label for="reviews">Average Reviews:</label>
        <input type="number" id="reviews" step="0.1" placeholder="Average Reviews">
    </form>
</div>

<table id="books-table">
    <thead>
        <tr>
            <th>#</th>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Likes</th>
            <th>Reviews</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
      
    </tbody>
</table>
<script src="/js/site.js"></script>
